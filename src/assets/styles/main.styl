@import 'lib/stylus-mixins'

.img-fluid 
    max-width 100%
    height auto

/* SECTION: People */
.header
    background #fff url('../img/bg-default.jpg') no-repeat
    background-size cover
    min-height rem(780)
    position relative

.container
    clearfix()
    margin auto
    position relative
    padding 0 rem(70)
    max-width rem(1170)

    .disclaimer
        z-index 200
        position absolute
        max-width rem(630)

        .title
            padding 0
            color #fff
            line-height 1.1
            font-weight 900
            font-size rem(62)
            margin rem(130) 0 rem(30)

        .content
            color #fff
            width rem(400)
            line-height 1.8
            font-size rem(18)
            margin-bottom rem(35)

    .ico-menino
        top rem(34)
        right rem(-10)
        position absolute
        z-index 100

    > .logo 
        z-index 50
        right rem(140)
        position absolute

    .content-wrapper
        padding 0
        width rem(600)
        margin rem(-45) 0 rem(70)

        .subtitle
            color #d72828
            font-size rem(48)
            margin 0 0 rem(30)

        .content
            margin 0
            padding 0
            color #999
            line-height 2
            font-size rem(17)
    
    .map-clientes
        margin-bottom rem(70)



