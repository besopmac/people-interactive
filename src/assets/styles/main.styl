/* SECTION: Copyright */
.copyright
    background-color #60645A



/* buttons */
.button 
    display inline-block
    
    &-default 
        color #fff
        font-size rem(14)
        border-radius rem(50)
        letter-spacing rem(2)
        padding rem(20) rem(30)
        text-transform uppercase
        background-color #d72828

    &-float
        right 0
        position absolute

    &-inicio,
    &-contato
        padding rem(22) rem(14) rem(16) rem(24)
        border-radius rem(50) 0 0 rem(50)
        background-color #d72828
        top rem(20)

    &-inicio
        display none