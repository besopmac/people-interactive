@import 'lib/stylus-mixins'

.img-fluid 
    max-width 100%
    height auto

.header
    background #fff url('../img/bg-default.jpg') center bottom no-repeat
    background-size cover
    min-height rem(780)
    position relative

.container
    clearfix()
    margin 0 auto
    position relative
    padding 0 rem(70)
    max-width rem(1170)
    box-sizing border-box

    border-bottom 2px dashed black

    .disclaimer
        z-index 200
        position absolute
        max-width rem(630)

        .title
            padding 0
            color #fff
            font-size rem(55)
            margin rem(130) 0 rem(35)

        .content
            color #fff
            width rem(400)
            line-height 1.8
            font-size rem(18)
            margin-bottom rem(35)

    .ico-menino
        top rem(34)
        right rem(-90)
        position absolute
        z-index 100


    > .logo 
        z-index 50
        right rem(70)
        position absolute

    .content-wrapper
        padding 0
        width rem(600)
        margin rem(-45) 0 rem(70)

        .subtitle
            color #d72828
            font-size rem(48)
            margin 0 0 rem(30)

        .content
            margin 0
            padding 0
            color #999
            line-height 2
            font-size rem(17)     


.box-telecine
    background url('../img/bg-telecine.jpg') no-repeat
    min-height rem(1798)

    .container
        padding 0 rem(70)
        position relative
        
        .logo
            margin rem(0) 0 rem(40)

        .subtitle
            color #fff
            font-size rem(60)
            text-align center
            text-transform uppercase
            margin rem(300) 0 rem(120)
        
        .ico-nuvem
            z-index 50
            right rem(350)
            position absolute
        
        .ico-robo
            z-index 50
            top rem(670)
            right rem(210)
            position absolute

        .ico-hero
            z-index 50
            top rem(960)
            left rem(-55)
            position absolute

        .ico-olaf
            z-index 50
            top rem(1135)
            right rem(25)
            position absolute

        .screens-flex
            z-index 50
            position absolute
            margin-top rem(40)
            padding 0 rem(70) 0 0
            

            .ico-bighero
                position absolute

            

            border 1px solid yellow


