@import 'lib/stylus-mixins'

.img-fluid 
    max-width 100%
    height auto

.header
    background #fff url('../img/bg-default.jpg') center bottom no-repeat
    background-size cover
    min-height rem(780)
    position relative

.container
    clearfix()
    margin 0 auto
    position relative
    padding 0 rem(70)
    max-width rem(1170)
    box-sizing border-box

    .disclaimer
        z-index 200
        position absolute
        max-width rem(630)

        .title
            padding 0
            color #fff
            font-size rem(55)
            margin rem(130) 0 rem(35)

        .content
            color #fff
            width rem(400)
            line-height 1.8
            font-size rem(18)
            margin-bottom rem(35)

    .ico-menino
        top rem(34)
        right rem(-90)
        position absolute
        z-index 100


    > .logo 
        z-index 50
        right rem(70)
        position absolute

    .content-wrapper
        padding 0
        width rem(600)
        margin rem(-45) 0 rem(70)

        .subtitle
            color #d72828
            font-size rem(48)
            margin 0 0 rem(30)

        .content
            margin 0
            padding 0
            color #999
            line-height 2
            font-size rem(17)     


.box-telecine
    background url('../img/bg-telecine.jpg') no-repeat
    min-height rem(1798)

    .container
        padding 0 rem(70)
        position relative
        
        .subtitle
            color #fff
            font-size rem(50)
            text-align center
            position relative
            text-transform uppercase
            margin rem(210) 0 rem(240)

        .logo
            margin rem(30) 0 rem(40)
        
        .ico-nuvem
            z-index 50
            top rem(130)
            right rem(300)
            position absolute
        
        .ico-robo
            z-index 50
            top rem(540)
            right rem(210)
            position absolute

        .ico-hero
            z-index 50
            top rem(830)
            left rem(-55)
            position absolute

        .ico-olaf
            z-index 50
            top rem(1020)
            right rem(25)
            position absolute

        .screen-float
            z-index 50
            position absolute
            margin-top rem(45)


.box-rededor
    background #c7ced6 url('../img/bg-rededor.jpg') no-repeat
    background-size 100%
    min-height rem(1660)

    .container
        .texto-telecine 
            color #fff
            line-height 1.8
            font-size rem(13)
            margin rem(120) 0

        .screens
            position relative
            margin rem(380) 0 0

            .logo
                margin-bottom rem(50)
            
            .ico-ipad
                z-index 50
                left rem(-80)
                position absolute
                transform translateY(70%)

            .content
                color #57514c
                line-height 1.8
                font-size rem(13)
                margin rem(40) 0 rem(80)


.box-santander
    background url('../img/bg-santander.jpg') no-repeat
    background-size 100%
    min-height rem(1744)

.box-cocacola
    background url('../img/bg-cocacola.jpg') no-repeat
    min-height rem(1034)

.box-vivara
    background url('../img/bg-vivara.jpg') no-repeat
    min-height rem(1750)

.box-fgv
    background url('../img/bg-fgv.jpg') no-repeat
    min-height rem(1720)

.box-hsbc
    background url('../img/bg-hsbc.jpg') no-repeat
    min-height rem(1127)

.box-veja
    background url('../img/bg-veja.jpg') no-repeat
    background-size 100%
    min-height rem(1252)

.box-contato
    background url('../img/bg-contato.jpg') no-repeat
    min-height rem(740)

.box
    position relative


/* SECTION: Copyright */
.copyright
    background-color #60645A



/* buttons */
.button 
    display inline-block
    
    &-default 
        color #fff
        font-size rem(14)
        border-radius rem(50)
        letter-spacing rem(2)
        padding rem(20) rem(30)
        text-transform uppercase
        background-color #d72828

    &-float
        right 0
        position absolute

    &-inicio,
    &-contato
        padding rem(22) rem(14) rem(16) rem(24)
        border-radius rem(50) 0 0 rem(50)
        background-color #d72828
        top rem(20)

    &-inicio
        display none