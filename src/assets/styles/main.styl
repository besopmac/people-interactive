.box-contato
    display flex
    align-items center
    flex-direction center
    padding rem(200) 0 rem(100)
    background #000407 url('../img/bg-contato.jpg') center top no-repeat
    
    .container
        padding 0
        color #fff
        display block
        max-width rem(640)

        .subtitle
            margin 0
            padding 0
            font-size rem(40)
            letter-spacing rem(-1px)

        .content
            padding 0
            margin rem(10) 0 rem(30)
            font-size rem(13)
            
.box
    position relative


.copyright
    color #fff
    padding rem(10) 0 rem(40)
    background-color #262633

    .wrapper
        padding 0
        display flex
        margin 0 auto
        justify-content center

        img
            margin-bottom rem(4)

        .address
            align-self flex-end
            font-size rem(12)
            line-height 1.8
            list-style none
            margin 0



/* buttons */
.button 
    display inline-block
    text-decoration none
    
    &-default 
        color #fff
        font-size rem(14)
        border-radius rem(50)
        letter-spacing rem(2)
        padding rem(20) rem(30)
        text-transform uppercase
        background-color #d72828

    &-float
        right 0
        padding rem(22) rem(14) rem(16) rem(24)
        border-radius rem(50) 0 0 rem(50)

    &-contato
        top rem(20)
        z-index 100
        position fixed
        background-color #d72828

    &-inicio
        top rem(130)
        position absolute
        background-color #fff;

    &-small
        letter-spacing rem(1.5)
        padding rem(10) rem(20)


.form
    display flex
    flex-direction column

    .form-row
        display flex
        margin-bottom rem(15)
        box-sizing border-box
        justify-content space-between

        .form-control
            flex 1
            border none
            color #000
            box-sizing content-box
            padding rem(10)
            line-height 1.5
            font-size rem(11)
            font-weight bold
            border-radius rem(5)
            letter-spacing rem(2)
            text-transform uppercase
            font-family 'Open Sans', sans-serif

            &-small
                flex 0 0 45%

        .counter
            font-size rem(11)
            letter-spacing rem(2)
            font-family 'Montserrat', sans-serif